@{
    ViewBag.Title = "Employee";
}

<h2> Employee Details</h2>
@using (Html.BeginForm()) 
{
    <div class="container">
        <table class="table">
            <tr>
                <th>Name</th>
                <td>@Html.TextBox("name")</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>@Html.TextBox("company")</td>
            </tr>
             <tr>
                <th>Designation</th>
                <td>@Html.TextBox("designation")</td>
            </tr>
             <tr>
                <th>Salary</th>
                <td>@Html.TextBox("salary")</td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Submit" />
                </td>
               
            </tr>
        </table>
    </div>

}
